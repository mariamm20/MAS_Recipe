<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    android:id="@+id/card_equipment">

    <TextView
        android:id="@+id/txt_equipment_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="No Equipment required..."
        android:textSize="20sp"
        android:visibility="gone"/>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/equipment_layout"
        android:padding="10dp">

        <ImageView
            android:id="@+id/equipment_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:src="@drawable/loading_img"/>

        <TextView
            android:id="@+id/txt_equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Equipment Name"
            android:textStyle="bold"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>